    "version": "0.2.0",
    "configurations": [


        {"name":"Python: Current File","type":"python","request":"launch","program":"${file}","console":"integratedTerminal","justMyCode":true},

    
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src",
        },
        {
            "name": "Python: Behave",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "args": [
                "--no-capture",
                "--no-capture-stderr",
                "--no-skipped",
                "${file}",
                "--tags=${selectedText}"
            ]
        }
    ]
}